{
  "expo": {
    "name": "AccessLink LGBTQ+",
    "slug": "accesslink-lgbtq",
    "version": "1.0.0",
    "orientation": "portrait",
    "userInterfaceStyle": "automatic",
    "assetBundlePatterns": [
      "**/*"
    ],
    "ios": {
      "supportsTablet": true,
      "bundleIdentifier": "com.accesslink.lgbtq",
      "config": {
        "usesNonExemptEncryption": false
      },
      "infoPlist": {
        "NSLocationWhenInUseUsageDescription": "AccessLink uses your location to find nearby accessible LGBTQ+ businesses and events.",
        "NSLocationAlwaysAndWhenInUseUsageDescription": "AccessLink uses your location to find nearby accessible LGBTQ+ businesses and events.",
        "NSCameraUsageDescription": "AccessLink uses the camera to allow businesses to upload photos showcasing their accessibility features.",
        "NSPhotoLibraryUsageDescription": "AccessLink accesses your photo library to upload accessibility feature photos.",
        "UIAccessibilityTraits": "button"
      },
      "associatedDomains": ["applinks:accesslinklgbtq.app"]
    },
    "android": {
      "package": "com.accesslink.lgbtq",
      "permissions": [
        "ACCESS_FINE_LOCATION",
        "ACCESS_COARSE_LOCATION",
        "CAMERA",
        "READ_EXTERNAL_STORAGE",
        "WRITE_EXTERNAL_STORAGE"
      ],
      "intentFilters": [
        {
          "action": "VIEW",
          "data": [
            {
              "scheme": "https",
              "host": "accesslinklgbtq.app"
            }
          ],
          "category": ["BROWSABLE", "DEFAULT"]
        }
      ]
    },
    "web": {
      "favicon": "./src/assets/favicon.png",
      "bundler": "metro"
    },
    "plugins": [
      [
        "expo-location",
        {
          "locationAlwaysAndWhenInUsePermission": "Allow AccessLink to use your location to find nearby accessible LGBTQ+ businesses."
        }
      ]
    ],
    "extra": {
      "eas": {
        "projectId": "your-project-id-here"
      },
      "firebaseApiKey": "@FIREBASE_API_KEY",
      "firebaseAuthDomain": "@FIREBASE_AUTH_DOMAIN",
      "firebaseProjectId": "@FIREBASE_PROJECT_ID",
      "firebaseStorageBucket": "@FIREBASE_STORAGE_BUCKET",
      "firebaseMessagingSenderId": "@FIREBASE_MESSAGING_SENDER_ID",
      "firebaseAppId": "@FIREBASE_APP_ID"
    }
  }
}
